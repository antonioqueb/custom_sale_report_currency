<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_order_report_currency_symbol" inherit_id="sale.report_saleorder_document">
        <!-- Agregar símbolo a las líneas de productos -->
        <xpath expr="//t[@t-foreach='o.order_line']//span[@t-field='line.price_unit']" position="replace">
            <span t-field="line.price_unit" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
        </xpath>

        <!-- Agregar símbolo al subtotal -->
        <xpath expr="//span[@t-field='line.price_subtotal']" position="replace">
            <span t-field="line.price_subtotal" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
        </xpath>

        <!-- Agregar símbolo al total -->
        <xpath expr="//span[@t-field='o.amount_total']" position="replace">
            <span t-field="o.amount_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
        </xpath>
    </template>
</odoo>
