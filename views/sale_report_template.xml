<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="document_tax_totals_currency" inherit_id="sale.document_tax_totals">
        <!-- Buscar directamente el campo tax_totals['amount_total'] -->
        <xpath expr="//span[contains(@t-field, 'tax_totals')]" position="replace">
            <span t-field="tax_totals.amount_total" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
        </xpath>
    </template>
</odoo>
