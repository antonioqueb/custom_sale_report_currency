<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_order_report_currency_symbol" inherit_id="sale.report_saleorder_document">
        <!-- Modificar el precio unitario -->
        <xpath expr="//td[@class='text-end' and contains(@name, 'price_unit')]" position="replace">
            <td class="text-end">
                <span t-field="line.price_unit" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />
            </td>
        </xpath>

        <!-- Modificar el subtotal -->
        <xpath expr="//td[@class='text-end' and contains(@name, 'price_subtotal')]" position="replace">
            <td class="text-end">
                <span t-field="line.price_subtotal" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />
            </td>
        </xpath>

        <!-- Modificar el total general -->
        <xpath expr="//span[@t-field='doc.amount_total']" position="replace">
            <span t-field="doc.amount_total" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />
        </xpath>
    </template>
</odoo>
